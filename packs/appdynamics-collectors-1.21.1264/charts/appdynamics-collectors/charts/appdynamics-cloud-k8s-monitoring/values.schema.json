        },
        "gatherInterval": {
          "description": "gather interval for server collector",
          "type": "number",
          "enum": [10, 20, 30, 60]
        },
        "skipProviderCheck": {
          "description": "skip the cloud provider check in server collector",
          "type": "boolean"
        },
        "env": {
          "description": "override the server collector configuration for a specific operating system",
          "type": "object"
        }
      },
      "required": [
